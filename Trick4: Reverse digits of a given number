//Example1: Reverse digits of a given number
class HelloWorld {
    public static void main(String[] args) {
        System.out.println("Reverse digits of a given string /Extract each digit from a given number to solve further questions");
        int n=123;
        int r;
        
       while(n!=0){
        r=n%10; //3,2,1
        System.out.print(r);
        n=n/10; //12,1,0
       }
      
    }
}
